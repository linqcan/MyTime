<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.linqcan.mytime"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.linqcan.mytime.MainActivity"
            android:uiOptions="splitActionBarWhenNarrow" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.linqcan.mytime.NewLabelActivity"
            android:label="@string/title_activity_new_label" 
            android:uiOptions="splitActionBarWhenNarrow"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name="com.linqcan.mytime.ViewLabelActivity"             
            android:uiOptions="splitActionBarWhenNarrow"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name="com.linqcan.mytime.EditLabelActivity"
            android:label="@string/title_activity_edit_label" 
            android:uiOptions="splitActionBarWhenNarrow"
            android:parentActivityName=".ViewLabelActivity" >
        </activity>
        <activity
            android:name="com.linqcan.mytime.ViewActivityActivity"
            android:label="@string/title_activity_new_activity" 
            android:uiOptions="splitActionBarWhenNarrow"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name="com.linqcan.mytime.EditActivityActivity"
            android:label="@string/title_activity_edit_activity" 
            android:uiOptions="splitActionBarWhenNarrow" >
        </activity>
    </application>

</manifest>