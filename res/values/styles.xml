<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
		<item name="android:actionBarStyle">@style/ActionBarStyle</item>
		<item name="android:actionBarTabTextStyle">@style/ActionBarTabText</item>
    </style>
 
    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_light_holo</item>
    </style>
    
    <style name="ActionBarTabText" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
    </style>
    
    <style name="ItemLabelText" parent="@android:style/TextAppearance.Small">
		<item name="android:textColor">#33B5E5</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:textStyle">bold</item>
    </style>  
    
    <style name="ItemLabel" parent="@style/ItemLabelText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="ItemData" parent="@android:style/TextAppearance.Medium">
		<item name="android:padding">8dp</item>
    </style>
    
    <style name="ItemBorder">
		<item name="android:background">#0099CC</item>
    </style>
    
    <style name="ItemBox">
        <item name="android:padding">0dp</item>
    </style>
    
    <style name="DateButton" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">8dp</item>
    </style>
    

</resources>