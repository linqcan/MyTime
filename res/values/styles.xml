<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="ItemLabelText" parent="@android:style/TextAppearance.Small">
		<item name="android:textColor">#33B5E5</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:textStyle">bold</item>
    </style>
    
    <style name="ItemLabel" parent="@style/ItemLabelText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="ItemData" parent="@android:style/TextAppearance.Medium">
		<item name="android:padding">8dp</item>
    </style>
    
    <style name="ItemBorder">
		<item name="android:background">#0099CC</item>
    </style>
    
    <style name="ItemBox">
        <item name="android:padding">0dp</item>
    </style>
    
    <style name="DateButton" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">8dp</item>
    </style>
    

</resources>