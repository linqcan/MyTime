<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <!-- Create another parent LinearLayout if other items are added -->
    <!-- Label name -->
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:padding="16dp"
		style="@style/ItemBox"
		>
	    <TextView 
	        android:text="@string/label_label_name"
	        style="@style/ItemLabel"
	        />
        <View 
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        style="@style/ItemBorder"
        	/>
	    <EditText
	        android:id="@+id/new_label_name"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:focusable="true"
	        android:hint="@string/hint_label_name"
	        android:inputType="textCapSentences"
	        android:lines="1"
	        android:gravity="top"
	        android:padding="16dp" 
	        />
    </LinearLayout>

</ScrollView>